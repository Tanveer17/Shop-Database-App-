<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DialogPane?>

<?import javafx.scene.control.ComboBox?>
<?import java.lang.String?>
<?import javafx.scene.control.DatePicker?>
<DialogPane fx:controller="com.tanveer.Controllers.SaleController"

            xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Customer Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="name" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="true">
                <value>
                    <String fx:value="Name"/>
                </value>
            </ComboBox>
            <Label text="Product" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="product" GridPane.rowIndex="2" GridPane.columnIndex="1" editable="true">
                <value>
                    <String fx:value="Product"/>
                </value>
            </ComboBox>
            <Label text="Quantity" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="quantity" GridPane.rowIndex="4" GridPane.columnIndex="1"/>




        </GridPane>
    </content>
</DialogPane>