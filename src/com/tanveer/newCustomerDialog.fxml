<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<DialogPane  fx:controller="com.tanveer.DialogController"

            xmlns:fx="http://javafx.com/fxml">
    <content>
    <GridPane vgap="10" hgap="10">
        <Label text="ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="id" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="First Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="firstName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Last Name" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="lastName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Phone Number" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneNumber" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Email" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="email" GridPane.rowIndex="4" GridPane.columnIndex="1"/>


    </GridPane>
    </content>
</DialogPane>